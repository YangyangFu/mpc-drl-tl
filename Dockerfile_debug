FROM yangyangfu/mpcdrl:cpu_py3

# install single zone temperature control environment for rom
USER root
WORKDIR $HOME  
COPY ./testcases/gym-environments/single-zone-rom/gym_singlezone_rom $HOME/github/testcases/gym-environments/single-zone-rom/gym_singlezone_rom
COPY ./testcases/gym-environments/single-zone-rom/setup.py $HOME/github/testcases/gym-environments/single-zone-rom/setup.py
RUN cd $HOME/github/testcases/gym-environments/single-zone-rom && pip install -e .


COPY ./testcases/gym-environments/tianshou_test/env_example $HOME/github/testcases/gym-environments/tianshou_test/env_example
COPY ./testcases/gym-environments/tianshou_test/setup.py $HOME/github/testcases/gym-environments/tianshou_test/setup.py
RUN cd $HOME/github/testcases/gym-environments/tianshou_test && pip install -e .

USER developer